<resources>
    <!-- ðŸ”¹ Card Style for Features -->
    <style name="FeatureCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginEnd">20dp</item> <!-- âœ… RTL support -->
        <item name="cardCornerRadius">12dp</item> <!-- âœ… Added for rounded corners -->
        <item name="cardElevation">6dp</item> <!-- âœ… Shadow effect for better UI -->
        <item name="android:background">@color/white</item>
    </style>

    <!-- ðŸ”¹ Text Style for Feature Items -->
    <style name="FeatureText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item> <!-- âœ… Better than android:gravity="center" -->
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- ðŸ”¹ Custom Button Style -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_cyan_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding">12dp</item> <!-- âœ… Better spacing -->
        <item name="cornerRadius">10dp</item> <!-- âœ… Ensure rounded corners -->
    </style>

</resources>
