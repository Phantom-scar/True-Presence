<resources>

    <!-- ✅ Base Theme (Supports Dark & Light Mode) -->
    <style name="Base.Theme.TruePresence" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorOnPrimary">@color/black</item> <!-- Text on primary -->

        <!-- Background & Surface Colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/cyan_light</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Button Customization -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- ✅ Custom Button Style (For Rounded & Cyan Buttons) -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_cyan_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- ✅ EditText Custom Style (Rounded & Cyan Themed) -->
    <style name="CustomEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/rounded_input_field</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">14dp</item>
        <item name="android:elevation">3dp</item>
    </style>

</resources>
