<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starry_background"
    android:padding="16dp">

    <!-- Glowing Pixel Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_logo_pixelated"
        android:elevation="4dp" />

    <!-- Username Input -->
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="20dp"
        android:autofillHints="Username"
        android:hint="@string/username"
        android:inputType="text"
        android:background="@drawable/neon_glow_edittext"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:fontFamily="@font/pixel_font" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="10dp"
        android:autofillHints="emailAddress"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:background="@drawable/neon_glow_edittext"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:fontFamily="@font/pixel_font" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="10dp"
        android:autofillHints="password"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:background="@drawable/neon_glow_edittext"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:fontFamily="@font/pixel_font" />

    <!-- Confirm Password Input -->
    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="10dp"
        android:autofillHints="password"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:background="@drawable/neon_glow_edittext"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:fontFamily="@font/pixel_font" />

    <!-- Register Button -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmPassword"
        android:layout_marginTop="20dp"
        android:text="@string/register"
        android:textColor="@color/black"
        android:background="@drawable/neon_button"
        android:fontFamily="@font/pixel_font"
        android:textStyle="bold"
        android:stateListAnimator="@anim/button_press" />

    <!-- Back to Login Button -->
    <Button
        android:id="@+id/backToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_marginTop="10dp"
        android:text="@string/back_to_login"
        android:textColor="@color/black"
        android:background="@drawable/gray_pixel_button"
        android:fontFamily="@font/pixel_font"
        android:textStyle="bold"
        android:stateListAnimator="@anim/button_press" />

</RelativeLayout>
