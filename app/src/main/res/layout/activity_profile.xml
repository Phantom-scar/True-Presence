<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_profile"
        android:background="@drawable/neon_card"
        android:scaleType="centerCrop"
        android:layout_marginBottom="20dp"/>

    <!-- Name Field -->
    <EditText
        android:id="@+id/nameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Enter Name"
        android:hint="@string/enter_name"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:background="@drawable/neon_glow_edittext"
        android:fontFamily="@font/pixel_font"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="20dp"/>

    <!-- Email Field -->
    <EditText
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="emailAddress"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:background="@drawable/neon_glow_edittext"
        android:fontFamily="@font/pixel_font"
        android:layout_below="@id/nameField"
        android:layout_marginTop="10dp"
        android:focusable="false"/>

    <!-- Update Button -->
    <Button
        android:id="@+id/updateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_profile"
        android:background="@drawable/neon_button"
        android:fontFamily="@font/pixel_font"
        android:textStyle="bold"
        android:layout_below="@id/emailField"
        android:layout_marginTop="20dp"/>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:background="@drawable/gray_pixel_button"
        android:fontFamily="@font/pixel_font"
        android:textStyle="bold"
        android:layout_below="@id/updateButton"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
